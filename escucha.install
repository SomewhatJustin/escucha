post_install() {
  cat <<'MSG'
To enable the user service:
  systemctl --user enable --now escucha.service

If key events are not detected, add your user to the input group:
  sudo usermod -aG input $USER

Config file is created on first run at:
  ~/.config/escucha/config.ini
MSG
}

post_upgrade() {
  post_install
}
